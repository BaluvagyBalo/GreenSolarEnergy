<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#87CEEB"
    android:orientation="vertical"
    tools:context=".ujfelmeres">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:gravity="center"
        android:text="Új felmérés megkezdése"

        android:textColor="#040303"
        android:textSize="25dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="669dp"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Helyszin megnevezése:"
                android:textColor="#035006"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/editTextTextPersonName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:textColor="#121111"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Megrendelői adatok:"
                android:textColor="#035006"
                android:textSize="20dp" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/csaladnav"
                        android:layout_width="400dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="nev"
                        android:inputType="textPersonName"
                        android:textColor="#121111" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/editTextTextPersonName3"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:ems="10"
                        android:hint="Szem.ig.szám"
                        android:inputType="textPersonName"
                        android:textColor="#121111"
                        tools:ignore="TouchTargetSizeCheck" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </TableRow>
            </TableLayout>

            <TextView
                android:id="@+id/textView15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Panelok darabszáma:"
                android:textColor="#035006"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/paneldarab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:minHeight="48dp"
                android:textColor="#121111"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Paneltipusok:"
                android:textColor="#035006"
                android:textSize="20dp" />

            <ListView
                android:id="@+id/panellista"
                android:layout_width="match_parent"
                android:layout_height="298dp" >

            </ListView>

            <TextView
                android:id="@+id/textView17"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:text="Panellek árai a darabszám függvényében:"
                android:textColor="#035006"
                android:textSize="20dp" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/panellerarai"
                    android:layout_width="202dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="#E30606"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="205dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="€"
                    android:textColor="#121111"
                    android:textSize="20dp" />
            </TableRow>

            <TextView
                android:id="@+id/jh"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:text="Inverter fajtái:"
                android:textColor="#035006"
                android:textSize="20dp" />

            <ListView
                android:id="@+id/inverterlista"
                android:layout_width="match_parent"
                android:layout_height="249dp">

            </ListView>

            <TextView
                android:id="@+id/textView21"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Inverterár:"
                android:textColor="#035006"
                android:textSize="20dp" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/inverterar"
                    android:layout_width="202dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="#E30606"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="205dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="€"
                    android:textColor="#050505"
                    android:textSize="20dp" />
            </TableRow>

            <TextView
                android:id="@+id/textView24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rögzítősinek és kabelek árai:"
                android:textColor="#035006"
                android:textSize="20sp" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/rogzitokkabelar"
                    android:layout_width="205dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="#E30606"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/textView26"
                    android:layout_width="202dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="€"
                    android:textColor="#040303"
                    android:textSize="20dp" />
            </TableRow>

            <Space
                android:layout_width="match_parent"
                android:layout_height="26dp" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView29"
                    android:layout_width="202dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Ár összesen:"
                    android:textColor="#035006"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/osszesen"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="#E30606"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/textView27"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="€"
                    android:textColor="#040303"
                    android:textSize="20dp" />
            </TableRow>

            <Button
                android:id="@+id/ajanlatkeres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Árkalkuláció" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/ajanlat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_green_light"
                android:text="Árajánlat mentése" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>